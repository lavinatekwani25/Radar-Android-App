<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mpandroidchart="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/radar_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:webLineWidth="1.0"
            mpandroidchart:webAlpha="100"
            mpandroidchart:webColor="@color/colorPrimary"
            mpandroidchart:webColorInner="@color/colorAccent"
            mpandroidchart:webFillColor="@color/colorPrimary"
            mpandroidchart:drawWeb="true"
            mpandroidchart:rotationEnabled="true"
            mpandroidchart:highlightPerDragEnabled="true"
            mpandroidchart:highlightPerTapEnabled="true"
            mpandroidchart:dragDecelerationEnabled="true"
            mpandroidchart:dragDecelerationFriction="0.9" />



</RelativeLayout>




